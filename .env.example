# ====== Runtime ======
ENV=local
DEBUG=true

# ====== API base path (backend mounts routers under this) ======
API_BASE=/v1

# ====== CORS (JSON array string of allowed origins) ======
CORS_ALLOW_ORIGINS=["http://localhost:5173","http://127.0.0.1:5173"]

# ====== Auth (dev) ======
AUTH_ENABLED=false
API_TOKEN=CHANGE_ME

# ====== Storage & uploads ======
STORAGE_DIR=data/uploads
MAX_UPLOAD_MB=20

# ====== Retention (housekeeping) ======
ENABLE_RETENTION=true
RETENTION_DAYS=1
RETENTION_SWEEP_MINUTES=30

# ====== Outline generation strategy ======
FEATURE_USE_MODEL=false
AGENT_URL=http://localhost:8001
AGENT_TIMEOUT_MS=10000

# ====== Image enrichment ======
FEATURE_IMAGE_API=true
IMAGE_PROVIDER=stub
# PEXELS_API_KEY=YOUR_PEXELS_API_KEY

# ====== Observability ======
TIMING_ALLOW_ORIGIN=*

# ====== Frontend (Vite) ======
# If your frontend runs in a separate dev server, set this in frontend/.env.local too.
# VITE_API_BASE=http://localhost:8000/v1
